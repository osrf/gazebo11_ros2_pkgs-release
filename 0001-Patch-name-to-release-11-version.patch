From 4a2731447f7bd1a2e9590191c4df50853e976bea Mon Sep 17 00:00:00 2001
From: Jose Luis Rivero <jrivero@osrfoundation.org>
Date: Fri, 8 May 2020 15:14:10 +0200
Subject: [PATCH 1/2] Patch name to release 11 version

---
 debian/changelog.em | 2 +-
 debian/control.em   | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/debian/changelog.em b/debian/changelog.em
index 3585909..26bf9ba 100644
--- a/debian/changelog.em
+++ b/debian/changelog.em
@@ -1,4 +1,4 @@
-@[for change_version, change_date, changelog, main_name, main_email in changelogs]@(Package) (@(change_version)@(DebianInc)@(Distribution)) @(Distribution); urgency=high
+@[for change_version, change_date, changelog, main_name, main_email in changelogs]@(Package.replace('gazebo-','gazebo11-')) (@(change_version)@(DebianInc)@(Distribution)) @(Distribution); urgency=high
 
 @(changelog)
 
diff --git a/debian/control.em b/debian/control.em
index 6d7b65c..330bdd7 100644
--- a/debian/control.em
+++ b/debian/control.em
@@ -1,4 +1,4 @@
-Source: @(Package)
+Source: @(Package.replace('gazebo-','gazebo11-'))
 Section: misc
 Priority: optional
 Maintainer: @(Maintainer)
@@ -6,7 +6,7 @@ Build-Depends: debhelper (>= @(debhelper_version).0.0), @(', '.join(BuildDepends
 Homepage: @(Homepage)
 Standards-Version: 3.9.2
 
-Package: @(Package)
+Package: @(Package.replace('gazebo-','gazebo11-'))
 Architecture: any
 Depends: ${shlibs:Depends}, ${misc:Depends}, @(', '.join(Depends))
 @[if Conflicts]Conflicts: @(', '.join(Conflicts))@\n@[end if]@
